.row
  -orders.each_with_index do |o, i|
    .col.s12.m6
      .card.small
        .card-content
          .card-title
            = o.deceased.name
            -if o.status == 'active'
              %i.material-icons.teal-text.text-accent-4.tooltipped{data: {tooltip: 'Active'}} done
            -if o.status == 'archived'
              %i.material-icons.blue-grey-text.tooltipped{data: {tooltip: 'Archived'}} archive
            = link_to order_path(o), class: 'right btn-floating waves-effect waves-teal' do
              %i.material-icons open_in_new
          .divider
          .section.row.valign-wrapper
            .col.m4.valign
              = image_tag o.deceased.photo.url(:thumb), class: 'responsive-img center'
            .col.m8.valign
              %p
                = "Funerale: "
                %span.card-date
                  = " #{o.deceased.funeral_day}"
                = " at "
                %span.card-place
                  = "#{o.deceased.funeral_place}"
              %p
                = 'Cemetery: '
                %span.card-cemetey
                  = "#{o.deceased.cemetery_name}"
              %p
                = 'Relative: '
                %span.card-relative
                  = "#{o.relative.name}"
              %p
                = 'Phone: '
                %span.card-phone
                  = "#{o.relative.mobile}"
          .divider
          .row
            .col.s12
              %blockquote
                = "Edited at "
                %span.card-date
                  ="#{o.edited_at}"
#pagination.center
  =will_paginate orders